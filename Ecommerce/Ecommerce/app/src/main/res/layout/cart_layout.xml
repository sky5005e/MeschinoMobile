<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:id="@+id/ll_product"
    android:layout_margin="5dp"

    android:background="@drawable/black_border"
    >


    <RelativeLayout
        android:layout_weight=".3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:id="@+id/iv_product"
            android:layout_width="70dp"
            android:layout_height="90dp"
            android:layout_centerInParent="true"
            android:src="@drawable/pepsi_can"
            />


        <TextView
            android:id="@+id/tv_offer_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20% OFF"
            android:background="@color/colorPrimary"
            android:fontFamily="@font/opensans_semibold"
            android:textColor="@color/White"
            android:textSize="11dp"
            android:padding="3dp"
            />

    </RelativeLayout>

    <LinearLayout
        android:layout_weight=".7"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >



    <TextView
        android:id="@+id/tv_product_name"
        android:layout_toLeftOf="@+id/iv_add_to_fvrt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pepsi"
        android:textAlignment="viewStart"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/opensans_bold"
        android:textColor="@color/colorPrimary"
        android:textSize="12dp"
        />

        <ImageView
            android:layout_alignParentRight="true"
            android:id="@+id/iv_add_to_fvrt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tint="@color/colorPrimary"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_star_border_black_24dp"/>

    </RelativeLayout>


        <TextView
        android:id="@+id/tv_product_short_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Chocolate Swiss Milk"
        android:textAlignment="viewStart"
        android:layout_marginTop="2dp"
        android:textSize="11dp"

        android:fontFamily="@font/opensans_regular"
        android:textColor="@color/Black"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:gravity="start">


        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MRP - RS.82"
            android:textSize="10dp"

            />

        <TextView
            android:id="@+id/tv_discounted_price"
            android:textSize="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textColor="@color/OrangeRed"
            android:text="Our Price - RS.80"/>

    </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            >


        <EditText
            android:id="@+id/et_qty"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="Qty : 1 "
            android:background="@drawable/bg_white"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:backgroundTint="@color/LightGrey"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:gravity="center"
            android:textSize="11dp"
            android:focusable="false"
            android:drawableRight="@drawable/ic_keyboard_arrow_down_black_24dp"
            android:fontFamily="@font/opensans_semibold"
            android:textColor="@color/Black"/>

    <LinearLayout
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:background="@drawable/bg_white"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:layout_gravity="end"
        android:backgroundTint="@color/colorPrimary"
        >

        <TextView
            android:id="@+id/tv_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:fontFamily="@font/opensans_semibold"
            android:textSize="11dp"

            android:textColor="@color/White"/>



    </LinearLayout>
        </RelativeLayout>
    </LinearLayout>



</LinearLayout>