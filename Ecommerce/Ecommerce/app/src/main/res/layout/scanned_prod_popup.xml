<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="@dimen/margin_10"
    >



    <RelativeLayout
        android:id="@+id/rl_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Item"
            android:gravity="center_vertical"
            android:textColor="@color/colorPrimary"
            android:fontFamily="@font/opensans_bold"
            android:layout_margin="@dimen/margin_10"
            android:layout_toLeftOf="@+id/iv_close"
            android:textAppearance="?android:attr/textAppearanceMedium"/>




    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_cancel_black_24dp"
        android:layout_gravity="end"
        android:layout_alignParentRight="true"
        android:tint="@color/Red"
        />
    </RelativeLayout>

        <LinearLayout
            android:layout_below="@+id/rl_top"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:id="@+id/ll_product"
            android:gravity="center"
            android:layout_margin="5dp"
            android:background="@drawable/black_border"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                >

                <ImageView
                    android:id="@+id/iv_product"
                    android:layout_width="70dp"
                    android:layout_height="90dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/pepsi_can"
                    />

                <TextView
                    android:id="@+id/tv_offer_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20% OFF"
                    android:background="@color/colorPrimary"
                    android:fontFamily="@font/opensans_semibold"
                    android:textColor="@color/White"
                    android:textSize="11dp"
                    android:visibility="gone"
                    android:padding="3dp"
                    />

            </RelativeLayout>

            <TextView
                android:id="@+id/tv_product_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pepsi"
                android:textAlignment="center"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/opensans_regular"
                android:textColor="@color/colorPrimary"
                android:textSize="12dp"
                />

            <TextView
                android:id="@+id/tv_product_short_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Chocolate Swiss Milk"
                android:textAlignment="center"
                android:layout_marginTop="2dp"
                android:textSize="12dp"
                android:fontFamily="@font/opensans_semibold"
                android:textColor="@color/Black"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">


                <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MRP - RS.82"
                    android:textSize="13dp"
                    android:fontFamily="@font/opensans_bold"
                    android:textColor="@color/colorPrimaryDark"

                    />

                <TextView
                    android:id="@+id/tv_discounted_price"
                    android:textSize="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/OrangeRed"
                    android:visibility="gone"
                    android:text="Our Price - RS.80"/>

            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@drawable/bg_white"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:backgroundTint="@color/colorPrimary"
                >

                <TextView
                    android:id="@+id/tv_add_to_cart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ADD TO CART"
                    android:fontFamily="@font/opensans_semibold"
                    android:textSize="11dp"
                    android:textColor="@color/White"/>

                <EditText
                    android:id="@+id/et_qty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Qty:1"
                    android:background="@drawable/bg_white"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="5dp"
                    android:backgroundTint="@color/LightGrey"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:gravity="center"
                    android:focusable="false"
                    android:textSize="11dp"
                    android:drawableRight="@drawable/ic_keyboard_arrow_down_black_24dp"
                    android:fontFamily="@font/opensans_semibold"
                    android:textColor="@color/Black"/>

            </LinearLayout>



        </LinearLayout>





</LinearLayout>